/*button*/
.btn {
  width: 80%;
  padding: 20rpx 0;
  border-radius: 10rpx;
  text-align: center;
  margin: 40rpx 10%;
  background: #0C1939;
  color: #fff;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #fff;
  opacity: 0.7;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
  border-radius: 60rpx 60rpx 0 0;
  box-shadow:0 4px 20px rgba(0, 0, 0, 0.05);
}
.drawer_content {
  padding: 20rpx 40rpx;
  height: 470rpx;
  overflow-y: scroll;
}
.drawer_title{
  height: 60rpx;
  width: 120rpx;
  padding:20rpx;
  font:24rpx "microsoft yahei";
  text-align: center;
}

.releas-menu{
  padding: 100rpx 36rpx 0;
  height: 300rpx;
  overflow-y: scroll;
  display: flex;
  justify-content: space-evenly;
}

.drawer_title image{
  height: 102rpx;
  width: 102rpx;
  border-radius: 51rpx;
  box-shadow:0 3px 40px rgba(242, 85, 81, 0.4); 
  margin-bottom: 20rpx;
}
