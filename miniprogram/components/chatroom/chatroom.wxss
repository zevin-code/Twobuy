.chatroom .body {
  flex: 2;
  display: flex;
  flex-direction: column;
  background: #fff;
  
}

.body .message {
  display: flex;
  flex-direction: row;
  position: relative;
  margin: 30rpx 20rpx;
}

.body .message.message__self {
  flex-direction: row-reverse;
}

.body .message .avatar {
  position: relative;
  /* top: 5rpx; */
  width: 68rpx;
  height: 68rpx;
  margin:0 16rpx;
  border-radius: 34rpx;
}

.body .message .main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.body .message.message__self .main {
  align-items: flex-end;
}

.body .message .nickname {
  font-size: 24rpx;
  color: #303030;
}

.body .message .text-content {
  border: 1px solid transparent;
  border-radius: 6px;
  background-color:#f5f5f5;
  margin: 2px 0 0 0;
  padding: 8px 12px;
  font-size: 28rpx;
  display: inline-block;
  color: #303030;
}

.body .message.message__self .text-content {
  background-color: #f25551;
  color: #fff;
}

.body .message .text-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  max-width: 80%;
}

.body .message.message__self .text-wrapper .loading{
  font-size: 16rpx;
  margin-right: 18rpx;
}

.body .message .image-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body .message .image-content {
  max-width: 240rpx;
  max-height: 240rpx;
  border-radius: 6px;
}

.body .message.message__self .image-wrapper .loading {
  font-size: 20rpx;
  margin-right: 18rpx;
}

.chatroom .footer {
  flex-basis: fit-content;
  display: flex;
  flex-direction: row;
  bottom: 0;
  padding: 36rpx 36rpx;
  background: #fff;
  /* margin-top: 60rpx; */
  border-radius: 60rpx 60rpx 0 0;
  box-shadow:0 4px 20px rgba(0, 0, 0, 0.2);
}

.chatroom .footer .message-sender {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.message-sender .text-input {
  flex: 1;
  font-size: 16px;
  border-radius: 20px;
  padding: 8px 14px;
  margin: 0 10px 0 5px;
  background: #f5f5f5;
}

.message-sender .btn-send-image {
  width: 72rpx;
  height: 72rpx;
  align-self: center;
}

button {
  font-size: 28rpx;
}

