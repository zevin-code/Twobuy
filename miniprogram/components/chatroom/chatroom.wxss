
.chatroom {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.chatroom .header {
  padding: 20rpx 36rpx 36rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  margin-bottom: 36rpx;
  display: flex;
  justify-content: space-between;
}

.goods-detail{
  flex: 1;

}
.goods-image{
  width: 194rpx;
  height: 183rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

goods-name{
  font-size: 28rpx;
  color: #303030;
  font-weight: 600;
    line-height: 32rpx;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 72rpx;
  width: 60%;
  -webkit-box-orient: vertical;
}

.tobuy-button{
  font-size: 28rpx;
  color: #f25551;
  display: flex;
  align-items: center;
  border: 1rpx solid #F25551;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 8rpx 16rpx;
  margin-right: 82rpx;
}

.price-tobuy{
  display: flex;
  justify-content: space-between;
  flex: 1;
  width: 100%;
}

.campus-name{
  font-size: 24rpx;
  color: #BCC3CB;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  display: block;
}

.goods-price{
  font-size: 36rpx;
  color: #F25551;
  font-weight: 600;
  bottom: 10rpx;
}
